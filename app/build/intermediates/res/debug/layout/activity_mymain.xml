<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
 tools:context=".MainActivity">


    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainWebView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/first_page_radiogroup" />
    <RadioGroup
        android:background="#000000"
        android:id="@+id/first_page_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/seclectfirstpage"
            android:onClick="onClick"
            android:gravity="center"

            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/radioButton1"
            android:checked="true" />

        <RadioButton
            android:background="@drawable/seclecttongxin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:onClick="onClick"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/radioButton2" />


        <RadioButton
            android:background="@drawable/seclectmessge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:onClick="onClick"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/radioButton3" />
        <RadioButton
            android:background="@drawable/seclectsettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:onClick="onClick"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/radioButton4" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="加载中，请耐心等候"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
