<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hint_gray"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingTop="@dimen/small_padding">

        <com.wj.kindergarten.compounets.CircleImage
            android:id="@+id/item_mine_list_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal_padding" />

        <TextView
            android:id="@+id/item_mine_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_mine_list_head"
            android:text="李小龙"
            android:textColor="@color/black"
            android:textSize="@dimen/big_text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_mine_list_name"
            android:layout_toRightOf="@+id/item_mine_list_head"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_mine_list_nike"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_mine_list_head"
                android:text="昵称：龙龙"
                android:textColor="@color/hint_gray"
                android:textSize="@dimen/normal_text" />

            <TextView
                android:id="@+id/item_mine_list_sexb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_mine_list_head"
                android:text="男    2015-10-11"
                android:textColor="@color/hint_gray"
                android:textSize="@dimen/normal_text" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_padding"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hint_gray"
        android:visibility="gone" />
</LinearLayout>