<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingTop="3dp">

    <ImageView
        android:id="@+id/main_tab_item_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/main_tab_tip"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignRight="@+id/main_tab_item_image"
        android:layout_marginLeft="5dp"
        android:background="@drawable/main_message_tips"
        android:gravity="center"
        android:text="22"
        android:textColor="@color/white"
        android:textSize="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/main_tab_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_tab_item_image"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/main_tab_bottom"
        android:textSize="14sp" />

</RelativeLayout>