<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/title_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_40"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/normal_padding"
            android:src="@drawable/pw1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_pw1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/layout_clean_1"
                android:background="@color/translate"
                android:gravity="center_vertical"
                android:hint="原密码"
                android:paddingLeft="@dimen/margin_15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/color_666666"
                android:textSize="@dimen/normal_text" />

            <RelativeLayout
                android:id="@+id/layout_clean_1"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clean"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_40"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/normal_padding"
            android:src="@drawable/pw2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_pw2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/layout_clean_2"
                android:background="@color/translate"
                android:gravity="center_vertical"
                android:hint="新密码"
                android:paddingLeft="@dimen/margin_15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/color_666666"
                android:textSize="@dimen/normal_text" />

            <RelativeLayout
                android:id="@+id/layout_clean_2"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clean"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_40"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/normal_padding"
            android:src="@drawable/pw2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_pw3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/layout_clean_3"
                android:background="@color/translate"
                android:gravity="center_vertical"
                android:hint="确认密码"
                android:paddingLeft="@dimen/margin_15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/color_666666"
                android:textSize="@dimen/normal_text" />

            <RelativeLayout
                android:id="@+id/layout_clean_3"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clean"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>