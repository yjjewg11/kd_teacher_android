<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/normal_padding"
    android:paddingRight="@dimen/normal_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/item_article_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘蓉老师"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/small_padding"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="@dimen/big_text" />

    <TextView
        android:id="@+id/item_article_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="内容\n内容\n内容\n内容\n"
        android:textColor="@color/hint_gray"
        android:textSize="@dimen/normal_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding">

        <TextView
            android:id="@+id/item_article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-10-20"
            android:textColor="@color/hint_gray"
            android:textSize="@dimen/small_text" />

        <TextView
            android:id="@+id/item_article_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/interaction_mine_zan_on"
            android:drawablePadding="@dimen/small_padding"
            android:text="111"
            android:textColor="@color/hint_gray"
            android:textSize="@dimen/small_text" />
    </RelativeLayout>
</LinearLayout>