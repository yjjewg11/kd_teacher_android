<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.wjkj.kd.teacher.views.PushStateActivity">

    <RelativeLayout
        android:background="#0F90D2"
        android:id="@+id/rl_pushstate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="推送设置"
            android:id="@+id/textView8"
            android:textSize="20sp"
            android:textColor="#ffffff"
            style="@style/MyTextViewStyle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />



        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_tuisong_settings"

            android:onClick="onClick"
            android:src="@drawable/zuojiantou2x"
            android:layout_marginLeft="27dp"
            style="@style/MyTextViewStyle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r5_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_pushstate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="推送消息"
            android:layout_marginLeft="30dp"
            style="@style/MyTextViewStyle"
            android:id="@+id/textView21"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.wjkj.kd.teacher.views.CheckSwitchButton
            android:checked="true"
            android:id="@+id/bt_switchbutton"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#bbbbbb"
        android:id="@+id/textView32"
        android:layout_below="@+id/r5_update"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
